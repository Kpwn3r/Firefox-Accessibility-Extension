{
  "manifest_version": 2,
  "name": "Text-to-Speech Extension",
  "version": "1.0",

  "description": "Read text aloud on any webpage by highlighting it.",

  "icons": {
    "48":"icon.png"
  },
  
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  }
}
